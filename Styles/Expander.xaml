							<ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalAlignment}" Margin="0,0,0,0" RecognizesAccessKey="True" SnapsToDevicePixels="True" VerticalAlignment="Center"/>
							<Grid Margin="0" HorizontalAlignment="Right">
